services:
  v2ray:
    image: v2fly/v2fly-core
    restart: always
    container_name: v2fly-core
    network_mode: host
    volumes:
      - /dockerContainers/vmess/conf/base_config.json:/etc/v2ray/config.json
      - /var/log/vmess:/mnt/logs
    entrypoint: ["sh", "-c", "v2ray run -c /etc/v2ray/config.json"]